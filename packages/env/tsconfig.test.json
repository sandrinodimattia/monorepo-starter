{
  "extends": "@packages/ts-config/tsconfig.node",
  "compilerOptions": {
    // Creates a build info file which allows the compiler to only build the changed files.
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",

    // Do not emit compiled files.
    "noEmit": true
  },

  // Specify files to include in compilation for testing.
  "include": ["./src/**/*.ts", "./src/**/*.test.ts", "./vitest.config.ts"],

  // Specify files to exclude from compilation.
  "exclude": ["node_modules", "dist"]
}
