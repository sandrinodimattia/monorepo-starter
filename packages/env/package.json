{
  "name": "@packages/env",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "description": "A TypeScript library for type-safe environment variable management using Zod schemas",
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "clean": "rm -rf dist && rm -rf node_modules && rm -rf .turbo",
    "build": "tsc -b",
    "lint": "biome lint .",
    "type-check": "tsc --noEmit",
    "format": "biome format --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@packages/ts-config": "workspace:*",
    "@packages/vitest": "workspace:*",
    "vitest": "^3.2.4"
  }
}