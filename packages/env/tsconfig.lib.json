{
  "extends": "@packages/ts-config/tsconfig.lib",
  "compilerOptions": {
    // Creates a build info file which allows the compiler to only build the changed files.
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.lib.tsbuildinfo",

    // Output directory for compiled files.
    "outDir": "./dist",

    // Root directory for compiled files.
    "rootDir": "./src"
  },

  // Folders to include in the build.
  "include": ["./src/**/*.ts"],

  // Folders to exclude from the build.
  "exclude": ["./src/**/*.test.ts", "node_modules", "dist"]
}
