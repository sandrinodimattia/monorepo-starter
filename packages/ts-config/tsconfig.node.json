{
  // JSON schema for TypeScript configuration validation.
  "$schema": "https://json.schemastore.org/tsconfig",

  // Display name for the configuration.
  "display": "Node.js",

  // Extend the base TypeScript configuration.
  "extends": "./tsconfig.base.json",

  // Compiler options specific to Node.js applications.
  "compilerOptions": {
    // Include ES2024 library definitions.
    "lib": [
      "es2024",
      "ESNext.Array",
      "ESNext.Collection",
      "ESNext.Iterator",
      "ESNext.Promise"
    ],

    // Use Node.js ESM module system.
    "module": "nodenext",

    // Use Node.js module resolution algorithm.
    "moduleResolution": "nodenext",

    // Target ECMAScript 2024.
    "target": "es2024",

    // Include Node.js type definitions.
    "types": ["node"]
  }
}
