{
  "extends": "@packages/ts-config/tsconfig.node",
  "compilerOptions": {
    // Creates a build info file which allows the compiler to only build the changed files.
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",

    // Do not emit compiled files.
    "noEmit": true
  },

  // Folders to include in the build.
  "include": ["./src/**/*"],

  // Folders to exclude from the build.
  "exclude": ["node_modules", "dist"]
}
