{
  "name": "monorepo-starter",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "description": "A minimal boilerplate for a monorepo using Node.js, React, Turbo, TypeScript and Biome",
  "author": "Sandrino Di Mattia",
  "license": "MIT",
  "keywords": [
    "nodejs",
    "react",
    "turborepo",
    "monorepo",
    "typescript"
  ],
  "engines": {
    "node": ">=24.0.0"
  },
  "packageManager": "pnpm@10.16.0",
  "scripts": {
    "prepare": "husky",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf pnpm-lock.yaml && pnpm run -r clean",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@tsconfig/node24": "^24.0.1",
    "@types/node": "^24.3.1",
    "@vitest/coverage-v8": "^3.2.4",
    "husky": "^9.1.7",
    "tsx": "^4.20.5",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2"
  }
}