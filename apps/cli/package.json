{
  "name": "@apps/cli",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "description": "Sample CLI application",
  "scripts": {
    "clean": "rm -rf dist && rm -rf node_modules && rm -rf .turbo",
    "dev": "tsx src/index.ts",
    "build": "tsc -b",
    "start": "node dist/index.js",
    "lint": "biome lint .",
    "type-check": "tsc --noEmit",
    "format": "biome format --write ."
  },
  "dependencies": {
    "@clack/prompts": "1.0.0-alpha.4",
    "@packages/env": "workspace:*",
    "@packages/math": "workspace:*",
    "dotenv": "^17.2.3",
    "picocolors": "^1.1.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@packages/ts-config": "workspace:*",
    "@types/node": "^24.6.2"
  }
}