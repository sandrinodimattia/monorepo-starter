{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**",
        "build/**"
      ],
      "env": [
        "NODE_ENV",
        "NEXT_PUBLIC_*",
        "VITE_*",
        "REACT_APP_*"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ],
      "outputs": []
    },
    "test": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [],
      "env": [
        "NODE_ENV",
        "CI"
      ]
    },
    "test:coverage": {
      "dependsOn": [
        "^test"
      ],
      "outputs": [
        "coverage/**"
      ],
      "env": [
        "NODE_ENV",
        "CI"
      ]
    },
    "test:watch": {
      "dependsOn": [
        "^build"
      ],
      "cache": false,
      "persistent": true,
      "outputs": [],
      "env": [
        "NODE_ENV"
      ]
    },
    "type-check": {
      "dependsOn": [
        "^type-check"
      ],
      "outputs": []
    }
  }
}